<html>
  <head>
  </head>

  <body>
		<div>
			<!-- jQuery handles to place the header background images -->
			<div id="bgimgs">
				<div id="home-bg" 			class="bgimg"></div>
				<div id="locations-bg" class="bgimg"></div>
				<div id="menu-bg" 			class="bgimg"></div>
			</div>
			
			<div id="locations-container" class="container">
				<div id="locations-header" class="header">
					<div id="locations-header-content" class="header-content">
					Locations
					</div>
				</div>
				<div id="locations-featpic" class="featpic"></div>
			</div>
			
			<div id="menu-container" class="container">
